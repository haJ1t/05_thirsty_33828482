<!-- survey.ejs -->
<!-- Customer survey page: collects user feedback and preferences about drinks -->

<!doctype html>
<html>
  <head>
    <!-- Page title and stylesheet -->
    <title>Customer Survey - <%= shopName %></title>
    <link rel="stylesheet" href="/style.css">
  </head>

  <body>
    <!-- Include shared navigation header -->
    <%- include('partials/header') %>

    <!-- Hero section introducing the survey -->
    <section class="survey-hero">
      <div class="survey-text">
        <h1>Customer Satisfaction Survey</h1>
        <p>
          We value your feedback! Please take a moment to share your thoughts.  
          Your input helps <strong><%= shopName %></strong> create even better experiences for our customers.
        </p>
      </div>

      <div class="survey-image">
        <!-- Decorative image for visual appeal -->
        <img src="https://images.unsplash.com/photo-1616627562808-f74d8d1c7c1d?auto=format&fit=crop&w=900&q=80" alt="Survey">
      </div>
    </section>

    <!-- Survey form section -->
    <section class="survey-form-section">
      <h2>Tell Us About You</h2>

      <!-- Feedback form (POST to /survey_submitted) -->
      <form method="POST" action="/survey_submitted" class="survey-form">

        <!-- Basic user info -->
        <div class="form-row">
          <div>
            <label for="first">First Name:</label>
            <input type="text" id="first" name="first" required>
          </div>
          <div>
            <label for="surname">Surname:</label>
            <input type="text" id="surname" name="surname" required>
          </div>
        </div>

        <div class="form-row">
          <div>
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>
          </div>
          <div>
            <label for="age">Age:</label>
            <input type="number" id="age" name="age" min="10" max="120">
          </div>
        </div>

        <!-- Radio group for drink category -->
        <div class="form-group">
          <h3>Which drink category do you consume most?</h3>
          <div class="radio-group">
            <% for(let i = 0; i < productCategories.length; i++) { %>
              <label class="radio-label">
                <input type="radio" name="drink" value="<%= productCategories[i] %>" required>
                <%= productCategories[i] %>
              </label>
            <% } %>
          </div>
        </div>

        <!-- Checkbox for student status -->
        <div class="form-group">
          <label class="checkbox-label">
            <input type="checkbox" name="student" value="Yes">
            I am a student
          </label>
        </div>

        <!-- Submit button -->
        <input type="submit" value="Submit Survey" class="btn-primary">
      </form>
    </section>

    <!-- Include shared site footer -->
    <%- include('partials/footer') %>
  </body>
</html>