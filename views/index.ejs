<!-- index.ejs -->
<!-- Home page: welcoming users and displaying featured drink categories -->

<!doctype html>
<html>
  <head>
    <!-- Core styling and page title -->
    <link rel="stylesheet" href="/style.css">
    <title><%= shopName %></title>
  </head>

  <body>
    <!-- Include global header (navigation + branding) -->
    <%- include('partials/header') %>

    <!-- Hero section: main banner with intro text and CTA -->
    <section class="hero">
      <div class="hero-text">
        <h1>Welcome to <%= shopName %></h1>
        <p>Your favorite spot for refreshing drinks, crafted with care and served with style.</p>
        <a href="/about" class="btn-primary">Discover More</a>
      </div>

      <div class="hero-image">
        <!-- Decorative hero image -->
        <img src="https://images.unsplash.com/photo-1504674900247-0877df9cc836?auto=format&fit=crop&w=900&q=80" alt="Drinks">
      </div>
    </section>

    <!-- Products section: dynamically generated drink categories -->
    <section class="products">
      <h2>Our Drinks</h2>
      <div class="product-grid">
        <% for(let i = 0; i < productCategories.length; i++) { %>
          <div class="card">
            <!-- Category image pulled dynamically from Unsplash -->
            <img src="https://source.unsplash.com/300x200/?<%= productCategories[i] %>,drink" alt="<%= productCategories[i] %>">
            <h3><%= productCategories[i] %></h3>
            <p>Enjoy our finest selection of <%= productCategories[i].toLowerCase() %> â€” made to refresh and delight.</p>
            <button class="btn-secondary">Shop Now</button>
          </div>
        <% } %>
      </div>
    </section>

    <!-- Include global footer -->
    <%- include('partials/footer') %>
  </body>
</html>